<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:id="@+id/layout_recycler"
    android:background="@drawable/back_putih"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/white_grey_border_bottom_white"
        android:layout_margin="5dp"
        android:id="@+id/header_recyclerstreaming"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/streaming_photo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="start"
            app:civ_border_color="#fff"
            android:src="@drawable/ic_account"
            app:civ_border_width="1dp"/>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/nama"
                android:fontFamily="@font/robotobold"
                android:id="@+id/streaming_dari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:drawableStart="@drawable/ic_globe"
                android:fontFamily="@font/robotothin"
                android:text="@string/jam"
                android:textColor="@color/darkGrey"
                android:textSize="12sp"
                android:id="@+id/streaming_jam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <TextView
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@drawable/button_putih"
            android:padding="5dp"
            android:fontFamily="@font/robotolight"
            android:id="@+id/tv_type_pesan"
            android:text="@string/type_pesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:padding="20dp"
        android:fontFamily="@font/robotoregular"
        android:textSize="16sp"
        android:text="@string/pesan"
        android:id="@+id/streaming_pesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
